@model IEnumerable<Web.Domen.Models.Paty>
<div class="nearParty" style="background-color: #e8e8e8;">
    <h2>ближайшие мероприятия:</h2>
    <div class="row960">
        <div class="prevItem" id="prev">
            <img alt="" src="/Content/img/prevBtn.png"/>
        </div>
        <div class="patyCarousel" id="paty">
            @foreach (var item in Model)
            {
                <div class="carItem">
                    <div class="patyItem" href="#">
                        <div class="pImgAva">
                            @if (item.Avatar != null)
                            {
                                <img alt="" src="@item.Avatar.Path"/>
                            }
                            else
                            {
                                <img alt="" src="/Content/img/pt.jpg" />
                            }
                        </div>
                        <p>@item.PatyDate.ToShortDateString()</p>
                        <h3>@item.Title</h3>
                        <p>
                            @item.Descr
                        </p>
                        <a class="redLink" href="@Url.Action("PatyDetails","Home", new {id=item.Id})">Подробнее ></a>
                    </div>
                </div>
            }
