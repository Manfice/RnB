<div style="display: none;" data-bind="visible:askme">
    <div class="popUpWrapper">
        <div class="formWrapper">
            <div class="formClose">
                <p data-bind="click:popUp.askmenow">x</p>
            </div>
            @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="titleBorder">
                    <h2>Форма обратной связи</h2>
                </div>
                <div class="inputRow">
                    <div class="inpItem">
                        <p>*</p>
                        <input type="text" name="Title" value="" placeholder="Имя, фамилия"/>
                    </div>
                    <div class="inpItem">
                        <p>*</p>
                        <input type="tel" name="Phone" value="" placeholder="Телефон"/>
                    </div>
                    <div class="inpItem">
                        <input type="email" name="Email" value="" placeholder="E-mail"/>
                    </div>
                </div>
                <textarea class="messageBox" name="message" placeholder="Сообщение" rows="5"></textarea>
                <div class="buttonBorder">
                    <button type="submit" class="redButton" href="#">Отправить</button>
                </div>
            }

        </div>
        <p style="color: white">* Поля, отмеченные звездочкой "*" - обязательны к заполнению</p>
        <p style="color: white">** Ваши данные ни при каких условиях не будут переданы третьим лицам</p>
    </div>
</div>

