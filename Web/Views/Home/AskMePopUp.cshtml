<div style="display: none;" data-bind="visible:askme">
    <div class="popUpWrapper">
        <div class="formWrapper">
            <div class="formClose">
                <p data-bind="click:popUp.askmenow">x</p>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="titleBorder">
                    <h2>Форма обратной связи</h2>
                </div>
                <ul class="validation-summary-errors"></ul>
                <div class="inputRow">
                    <div class="inpItem">
                        <p>*</p>
                        <input type="text" name="Title" data-bind="value:feedback.fio" placeholder="Имя, фамилия"/>
                    </div>
                    <div class="inpItem">
                        <p>*</p>
                        <input type="tel" name="Phone" data-bind="value:feedback.phone" placeholder="Телефон"/>
                    </div>
                    <div class="inpItem">
                        <input type="email" name="Email" data-bind="value:feedback.email" placeholder="E-mail"/>
                    </div>
                </div>
                <textarea class="messageBox" name="message" placeholder="Сообщение" data-bind="textInput:feedback.message" rows="5"></textarea>
                <div class="buttonBorder">
                    <button type="button" data-bind="click:popUp.feedbackSubmit" class="redButton" href="#">Отправить</button>
                </div>
            }

        </div>
        <p style="color: white">* Поля, отмеченные звездочкой "*" - обязательны к заполнению</p>
        <p style="color: white">** Ваши данные ни при каких условиях не будут переданы третьим лицам</p>
    </div>
</div>

